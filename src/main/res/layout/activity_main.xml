<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/edLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/inputOne"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:imeOptions="actionNext"/>
            <EditText
                android:id="@+id/inputTwo"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:imeOptions="actionNext"/>
            <EditText
                android:id="@+id/inputThree"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:imeOptions="actionNext"/>
            <EditText
                android:id="@+id/inputFour"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:imeOptions="actionNext"/>
            <EditText
                android:id="@+id/inputFive"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:imeOptions="actionNext"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/txtLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtOne"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:background="@drawable/bg_text"/>
            <TextView
                android:id="@+id/txtTwo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:background="@drawable/bg_text"/>
            <TextView
                android:id="@+id/txtThree"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:background="@drawable/bg_text"/>
            <TextView
                android:id="@+id/txtFour"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:background="@drawable/bg_text"/>
            <TextView
                android:id="@+id/txtFive"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:background="@drawable/bg_text"/>


        </LinearLayout>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="bottom"
       android:orientation="vertical">
       <Button
           android:id="@+id/btnVerify"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/start"
           android:layout_marginStart="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginBottom="10dp"
           android:textColor="@android:color/white"
           />
       <Button
           android:id="@+id/btnSort"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/sort"
           android:layout_marginStart="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginBottom="10dp"
           android:layout_gravity="bottom"
           android:textColor="@android:color/white"
           />
       <Button
           android:id="@+id/restart"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Restart"
           android:layout_marginStart="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginBottom="10dp"
           android:layout_gravity="bottom"
           android:textColor="@android:color/white"
           />
   </LinearLayout>
</FrameLayout>